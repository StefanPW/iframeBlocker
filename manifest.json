{
  "background": {
    "scripts": ["blockIFrame.js"]
  }, 
  "description": "Block not wanted iframes - parts of the webpage which contains ads or are tracking you.", 
  /*"developer": {
    "name": "Stefan Demski"
  }, */
  "icons": {
    "128": "data/icons/128.png", 
    "16": "data/icons/16.png", 
    "32": "data/icons/32.png", 
    "48": "data/icons/48.png", 
    "64": "data/icons/64.png"
  }, 
  "manifest_version": 2, 
  "name": "iframe Blocker", 
  "options_ui": {
    "chrome_style": true, 
    "page": "data/options/options.html"
  }, 
  "permissions": [
	"storage",
    "<all_urls>", 
    "activeTab",
	"webRequest",
	"webRequestBlocking",
	"https://*/*","http://*/*"
  ], 
  "short_name": "iframeblock", 
  "version": "0.2"
}